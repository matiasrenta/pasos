<h2>Pagos del mes</h2>
<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table" style="margin-top:5px;">
  <tr>
    <th class="table-header-repeat line-left"><a href="#" onclick="javascript:return false;">Fecha</a></th>
    <th class="table-header-repeat line-left"><a href="#" onclick="javascript:return false;">Importe</a></th>
  </tr>

  <% @patient.payments.where("created_at >= ? AND created_at <= ?", Time.zone.now.beginning_of_month, Time.zone.now.end_of_month).each do |payment| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= l(payment.created_at, :format => :without_seg) %></td>
        <td align="right">$<%= number_to_currency(payment.importe, :unit => "") %></td>
      </tr>
  <% end %>
</table>