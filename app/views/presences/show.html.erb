<%= render "shared/control_buttons", :locals => {:instance => @presence} %>

<table class="show_table">
  <tr>
    <td class="td_label"><b>Paciente:</b></td>
    <td class="td_data"><%= @presence.therapy.patient.nombre %></td>
  </tr>

  <tr>
    <td class="td_label"><b>Terapeuta:</b></td>
    <td class="td_data"><%= @presence.therapy.therapist.nombre %></td>
  </tr>
  <tr>
    <td class="td_label"><b><%= t("simple_form.labels.fecha_hora") %>:</b></td>
    <td class="td_data"><%= l(@presence.fecha_hora, :format => :long_day) %></td>
  </tr>
  <tr>
    <td class="td_label"><b><%= t("simple_form.labels.importe") %>:</b></td>
    <td class="td_data">$<%= number_to_currency(@presence.importe, :unit => "") %></td>
  </tr>
</table>
