<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><a href="#"><%= "Fecha" %></a></th>
    <th class="table-header-repeat line-left minwidth-1"><a href="#"><%= "Actividad" %></a></th>
  </tr>

  <% @activities.each do |activity| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= activity.created_at %></td>
        <td>
          <span style="font-weight: bold; color: #00008b;"><%= activity.owner.try(:full_name) %></span>
          <%= render_activity activity %>
        </td>
      </tr>
  <% end %>
</table>



