<%= render "shared/error_messages", :target => @user %>

<%= render "shared/control_buttons", :locals => { :instance => @user } %>

<div class="clear"></div>

<div class="gray_form">
  <%= simple_form_for(@user) do |f| %>

      <div class="inputs">
        <%= f.input :email, :input_html => {:disabled => !current_user.admin?} %>
        <%= f.association :role, :input_html => {:disabled => !current_user.admin?, :onchange => "javascript:show_hide_commission(this); return false;"} %>

        <%= f.input :name %>
        <%= f.input :last_name %>
        <%= f.input :mother_last_name %>

        <%= f.association :state, :input_html => {:disabled => !current_user.admin?} %>

        <%= f.input :work_phone %>
        <%= f.input :cell_phone %>
      </div>

      <%= render "shared/submit_form_model", :model_class => User %>

  <% end %>
</div>


