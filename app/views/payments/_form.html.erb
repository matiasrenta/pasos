<div class="gray_form">
  <%= simple_form_for(@payment) do |f| %>

      <div class="inputs">
        <%= f.association :patient %>
        <%= f.input :description, :input_html => {:rows => 4, :cols => 30} %>
        <%= f.input :importe, :input_html => {:class => "money"} %>
      </div>

      <%= render "shared/submit_form_model", :model_class => Payment %>

  <% end %>
</div>


